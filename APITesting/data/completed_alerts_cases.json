[
  {
    "name": "valid_update_password",
    "description": "Valid password update should return 200",
    "method": "PUT",
    "include_auth": true,
    "payload": {
      "newPassword": "Aravind@12",
      "confirmPassword": "Aravind@12"
    },
    "expected_status": 200
  },
  {
    "name": "missing_password_fields",
    "description": "Missing body should return 400",
    "method": "PUT",
    "include_auth": true,
    "payload": {},
    "expected_status": 400,
    "expected_message": "newPassword and confirmPassword are required"
  },
  {
    "name": "password_mismatch",
    "description": "Password mismatch should return 400",
    "method": "PUT",
    "include_auth": true,
    "payload": {
      "newPassword": "Aravind@12",
      "confirmPassword": "Aravind@123"
    },
    "expected_status": 400,
    "expected_message": "New password and confirm password do not match"
  },
  {
    "name": "password_policy_violation",
    "description": "Weak password should return 400",
    "method": "PUT",
    "include_auth": true,
    "payload": {
      "newPassword": "aravind",
      "confirmPassword": "aravind"
    },
    "expected_status": 400
  },
  {
    "name": "same_as_old_password",
    "description": "Old password reuse should fail",
    "method": "PUT",
    "include_auth": true,
    "payload": {
      "newPassword": "OldPassword@1",
      "confirmPassword": "OldPassword@1"
    },
    "expected_status": 400,
    "expected_message": "New password cannot be the same as old password"
  },
  {
    "name": "missing_auth",
    "description": "Missing token should return 401",
    "method": "PUT",
    "include_auth": false,
    "payload": {
      "newPassword": "Aravind@12",
      "confirmPassword": "Aravind@12"
    },
    "expected_status": 401
  }
]

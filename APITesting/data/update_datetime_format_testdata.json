        },
        {
            "title": "MM/DD/YYYY + EVENT_LOCAL + Australia/Sydney",
            "payload": {
                "dateFormat": "MM/DD/YYYY",
                "timeFormat": "EVENT_LOCAL",
                "timeZone": "Australia/Sydney"
            },
            "expected_status": 200
        },
        {
            "title": "DD/MM/YYYY + EVENT_LOCAL + Asia/Tokyo",
            "payload": {
                "dateFormat": "DD/MM/YYYY",
                "timeFormat": "EVENT_LOCAL",
                "timeZone": "Asia/Tokyo"
            },
            "expected_status": 200
        },
        {
            "title": "YYYY/MM/DD + EVENT_LOCAL + Europe/Paris",
            "payload": {
                "dateFormat": "YYYY/MM/DD",
                "timeFormat": "EVENT_LOCAL",
                "timeZone": "Europe/Paris"
            },
            "expected_status": 200
        },
        {
            "title": "MM/DD/YYYY + USER_LOCAL + UTC",
            "payload": {
                "dateFormat": "MM/DD/YYYY",
                "timeFormat": "USER_LOCAL",

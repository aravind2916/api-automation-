{
    "valid_cases": [
        {
            "title": "MM/DD/YYYY + USER_LOCAL + Asia/Kolkata",
            "payload": {
                "dateFormat": "MM/DD/YYYY",
                "timeFormat": "USER_LOCAL",
                "timeZone": "Asia/Kolkata"
            },
            "expected_status": 200
        },
        {
            "title": "MM/DD/YYYY + GMT + UTC",
            "payload": {
                "dateFormat": "MM/DD/YYYY",
                "timeFormat": "GMT",
                "timeZone": "UTC"
            },
            "expected_status": 200
        },
        {
            "title": "MM/DD/YYYY + EVENT_LOCAL + EVENT_LOCAL",
            "payload": {
                "dateFormat": "MM/DD/YYYY",
                "timeFormat": "EVENT_LOCAL",
                "timeZone": "EVENT_LOCAL"
            },
            "expected_status": 200
        },
        {
            "title": "DD/MM/YYYY + USER_LOCAL + Asia/Kolkata",
            "payload": {
